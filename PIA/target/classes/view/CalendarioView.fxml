<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.CalendarioDeClase"
            prefHeight="600.0" prefWidth="900.0">

    <left>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
            <HBox alignment="CENTER" spacing="15">
                <Button text="&lt;" onAction="#mesAnterior"/>
                <Label fx:id="lblMesAnio" text="MES AÑO" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button text="&gt;" onAction="#mesSiguiente"/>
            </HBox>

            <GridPane fx:id="gridCalendario" hgap="5" vgap="5" alignment="CENTER">
            </GridPane>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label fx:id="lblFechaSeleccionada" text="Selecciona un día" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <TableView fx:id="tablaClases" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colHora" text="Hora" prefWidth="100"/>
                    <TableColumn fx:id="colDesc" text="Actividad" prefWidth="250"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <Separator/>

            <Label text="Agregar Nueva Clase" style="-fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtHora" promptText="HH:mm (Ej. 18:30)" prefWidth="120"/>
                <TextField fx:id="txtDescripcion" promptText="Descripción (Ej. Zumba)" HBox.hgrow="ALWAYS"/>
                <Button text="Guardar" onAction="#agregarClase" style="-fx-base: #27ae60; -fx-text-fill: white;"/>
            </HBox>
            <Label text="*Doble click en la tabla para editar descripción" style="-fx-font-size: 10px; -fx-text-fill: grey;"/>
        </VBox>
    </center>
</BorderPane>